{
  "name": "@ekz/formix",
  "packageManager": "yarn@4.3.1",
  "version": "1.0.0",
  "description": "Type-safe React form to be used with Typescript",
  "keywords": [
    "react",
    "form",
    "formix",
    "typescript",
    "type-safe"
  ],
  "author": {
    "name": "Alan Heitkotter",
    "email": "heitkotter@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erkez/formix.git"
  },
  "bugs": {
    "url": "https://github.com/erkez/formix/issues"
  },
  "homepage": "https://github.com/erkez/formix#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@ekz/option": "^1.2.1",
    "immutable": "^4",
    "react": "^16.8.0 || ^17 || ^18",
    "typescript": "^4 || ^5"
  },
  "devDependencies": {
    "@ekz/option": "^1.2.5",
    "@ekz/packer": "^0.16.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^5.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^26.0.15",
    "documentation": "^13.1.1",
    "immutable": "^4.3.6",
    "jest": "^26.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "test": "npx jest",
    "lint": "npx eslint --ext .ts --ext .tsx .",
    "lint:fix": "yarn lint --fix",
    "build": "yarn build:dev",
    "build:watch": "yarn build:dev --watch",
    "build:dev": "npx webpack --mode=development",
    "build:prod": "npx webpack --mode=production",
    "declarations:ts": "npx tsc -d --declarationDir lib --emitDeclarationOnly --jsx react src/index.ts",
    "prepublish": "yarn test --ci --no-watchman && yarn lint && yarn build:prod && yarn declarations:ts"
  }
}
